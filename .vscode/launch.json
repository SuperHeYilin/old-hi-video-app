    "version": "0.2.0",
    "configurations": [
      {
        "name": "启动",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "runtimeExecutable": "npm",
        "windows": { "runtimeExecutable": "npm.cmd" },
        "runtimeArgs": [ "start" ],
        "console": "integratedTerminal",
        "protocol": "inspector",
        "restart": true
      },
      {
        "name": "编译",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "runtimeExecutable": "npm",
        "windows": { "runtimeExecutable": "npm.cmd" },
        "runtimeArgs": [ "build" ],
        "console": "integratedTerminal",
        "protocol": "inspector",
        "restart": true
      }
    ]
}
